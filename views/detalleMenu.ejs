<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head.ejs") %> 
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <nav class="ps-top">
      <%- include("./partials/nav.ejs") %> 
    </nav>

    <!-- Header -->
    <header class="ps-display-container ps-content ps-wide" id="home">
      <%- include("./partials/header.ejs") %> 
    </header>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plato.titulo %></h1>
          <br />
          <h4><%= plato.descripcion %></h4>
          <p class="ps-text-grey">
            U$S <%= plato.precio %>
          </p>
        </div>
        
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= plato.image %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <footer class="ps-center ps-light-grey ps-padding-32">
        <p>Powered by Pimienta & Sal</p>
      </footer>
    </div>
  </body>
</html>
